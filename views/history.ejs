<%- include("partials/header.ejs") %>
    <div class="container">
        <h2 class="text-center">Transaction History</h2>
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td>
                        Creditor Name
                    </td>
                    <td>
                        Receiver Name
                    </td>
                    <td>
                        Amount
                    </td>
                    <td>
                        Transaction Time
                    </td>
                </tr>
                <% history.forEach((history)=> { %>
                    <tr>
                        <td>
                            <%= history.Creditor %>
                        </td>
                        <td>
                            <%= history.Receipent %>
                        </td>
                        <td>
                            <%= history.Amount %>
                        </td>
                        <td>
                            <%= history.Time %>
                        </td>
                    </tr>
                    <%  }) %>
            </tbody>
        </table>
        <div class="row" style="font-size: 2rem;">
            <div class="col-6"><a href="/">Home</a></div>
            <div class="col-6 col-offset-2"><a href="/home"> Users</a></div>
        </div>
    </div>
    <%- include("partials/footer.ejs") %>